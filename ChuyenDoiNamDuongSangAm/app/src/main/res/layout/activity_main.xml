<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:background="#553A85"
            android:padding="16dp"
            android:text="Chuyển Đổi Năm Dương Lịch"
            android:textAlignment="center"
            android:textColor="#42A5F5"
            android:textSize="20dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:text="Năm dương lịch"
            android:textColor="#42A5F5"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edt_nhap_nam_duong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:hint="Nhập năm Dương"
            android:textColorHint="#42A5F5"
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn_chuyendoi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Chuyển Đổi" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="18dp"
            android:textColor="#42A5F5"
            android:text="Năm âm lịch" />

        <TextView
            android:id="@+id/txt_nam_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4F8FC1"
            android:padding="16dp"
            android:text=""

            android:textColor="#2138BC"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="18dp" >

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_span="2"
            android:background="#553A85"

            android:text="" />
    </TableRow>
</TableLayout>
